<h1 class="text-success my-5">Sign Up</h1>
<%= form_with(scope: :user, url: signup_path, local: true) do |form| %>
  <div class="my-3">
    <%= form.text_field :first_name, placeholder: "First Name" %>
  </div>
  <div class="my-3">
    <%= form.text_field :last_name, placeholder: "Last Name" %>
  </div>
  <div class="my-3">
    <%= form.email_field :email, placeholder: "Email" %>
  </div>
  <div class="my-3">
    <%= form.password_field :password, placeholder: "Password" %>
  </div>
  <div class="my-3">
    <%= form.password_field :password_confirmation, placeholder: "Password Confirmation" %>
  </div>
  <div>
    <%= form.submit "Sign Up", class: 'btn bg-success text-light my-4' %>
  </div>
<% end %>
